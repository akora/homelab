---
# Centralized Vault - ALL sensitive data for homelab
# In production, encrypt this file with: ansible-vault encrypt ansible/group_vars/all/vault.yml
# This is an example file, please copy it to vault.yml and fill in your actual values.

# =============================================================================
# TRAEFIK CREDENTIALS
# =============================================================================
# Email for your Cloudflare account
vault_traefik_cloudflare_email: "your-cloudflare-email@example.com"
# API Token for Cloudflare DNS
vault_traefik_cloudflare_dns_api_token: "your-cloudflare-dns-api-token"
# Email for Let's Encrypt SSL certificates
vault_traefik_letsencrypt_email: "your-letsencrypt-email@example.com"

# =============================================================================
# PORTAINER CREDENTIALS
# =============================================================================
# Your Portainer Edge Agent key
vault_portainer_agent_edge_key: "your-portainer-edge-key"

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
# Domain and infrastructure settings
vault_domain: "your-domain.com"
vault_admin_email: "your-admin-email@example.com"
vault_lan_subnet: "192.168.1.0/24"

# Host IP addresses
vault_host_ips:
  rpi4_01: "192.168.1.41"
  rpi4_02: "192.168.1.42"
  rpi5_01: "192.168.1.51"
  zima_01: "192.168.1.91"
  router: "192.168.1.1"
  nas: "192.168.1.32"

# Service domains
vault_service_domains:
  traefik: "traefik.your-domain.com"
  gitea: "git.your-domain.com"
  portainer: "portainer.your-domain.com"
  homepage: "home.your-domain.com"
  syncthing: "sync.your-domain.com"
  n8n: "n8n.your-domain.com"

# =============================================================================
# GITEA CREDENTIALS
# =============================================================================
vault_gitea_admin_username: "gitea-admin"
vault_gitea_admin_password: "your-secure-gitea-admin-password"
vault_gitea_admin_email: "your-gitea-admin-email@example.com"

# =============================================================================
# TWINGATE CREDENTIALS
# =============================================================================
# Your Twingate network URL
vault_twingate_connector_url: "https://your-network.twingate.com"
# Network key (leave empty if not required)
vault_twingate_network_key: ""
# Twingate connector instances configuration
vault_twingate_connectors:
  - name: "twingate-rpi4-01"
    host: "rpi4-01"
    log_level: 5
    enabled: true
    access_token: "your-twingate-access-token-1"
    refresh_token: "your-twingate-refresh-token-1"
  - name: "twingate-rpi4-02"
    host: "rpi4-02"
    log_level: 5
    enabled: true
    access_token: "your-twingate-access-token-2"
    refresh_token: "your-twingate-refresh-token-2"

# =============================================================================
# N8N CREDENTIALS
# =============================================================================
# HTTP Basic Auth credentials for n8n web interface
vault_n8n_basic_auth_user: "admin"
vault_n8n_basic_auth_password: "your-secure-n8n-password"
# Encryption key for n8n credential storage (must be exactly 32 characters)
vault_n8n_encryption_key: "your-32-character-encryption-key"
